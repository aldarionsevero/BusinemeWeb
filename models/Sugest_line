# -*- coding: utf-8 -*-

""" docstring for package sugest_line """
from django.db import models
from models.busline import Busline


class Sugest_line (models.Model):

    busline = models.ForeignKey(Busline)
    description = models.CharField(max_length=255)
    justify = models.CharField(max_length=255)

    def __unicode__(self):
        """Return data of sugested line."""
        return 'line_number: %s description: %s justify: %s' % (self.buline_id,
        														self.description,
        														self.justify)

	def filter_by_line_number(cls, line_number):
		return cls.objects.filter(line_number__startswith=line_number)

	def filter_all(cls):
		"""Return all sugested lines."""
		return cls.objects.all()